{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "vite: dev",
            "type": "shell",
            "command": "pnpm run dev",
            "isBackground": true,
            "problemMatcher": [
                {
                    "pattern": [
                        {
                            "regexp": "."
                        }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": "^(?!.*).*$",
                        "endsPattern": "(?i)ready in\\s+\\d+ms|Local:\\s+http"
                    }
                }
            ],
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "clear": true
            }
        }
    ]
}